each article in articles
  if article.index != 0
    #article-block().mdl-card.mdl-shadow--2dp
      .mdl-card__title(style=('background-image: url("#{article.picture}"); height: 250px'))
        h2.mdl-card__title-text !{article.title}
      if article.index == 1
        .tags.mdl-card__supporting-text !{article.content}
      else
        .tags.mdl-card__supporting-text !{article.preview}
      .mdl-card__actions.mdl-card--border#readmore
        a(href='/archives/' + article.time.year + '/' + article.time.month + '/' + article.name + '.html').mdl-button.mdl-button-icon.mdl-js-button.mdl-js-ripple-effect ReadMore

.pages
  ul
    each page in pages
      li
        if page.isCurrentPage
          a.current(href="/pages/#{page.value}.html") #{page.value}
        else
          a(href="/pages/#{page.value}.html") #{page.value}
